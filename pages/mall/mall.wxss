/* pages/mall/mall.wxss */
page{
  height:100%;
  overflow: hidden;
  display: flex;
  font-size: 14px
}
.sidebar{
  width: 180rpx;
  background-color: #f2f2f2;
  overflow-x: hidden
}
.nav-item{
  height: 80rpx;
  line-height: 80rpx;
  padding: 16rpx;
  color: #666;
  border-bottom: 1px solid #fff;
  border-left: 1px solid #dedede;
}
.nav-item.current{
  border-left-color: #000;
  color:#000;
  background-color: #fff;
}
.content{
  flex:1;
  padding-top: 10rpx;
}
.product{
  width:250rpx;
  height: 400rpx;
  float: left;
  padding-left: 30rpx;
}