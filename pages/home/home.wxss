page {
  background-color: #F8F8F8;
  /* height: 100%; */
  font-size: 32rpx;
  line-height: 1.6;
}
.page-body{
  padding-top: 40rpx;
}
.page-section{
  width: 100%;
  margin-bottom: 60rpx;
}
.page-section_center{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.page-section:last-child{
  margin-bottom: 0;
}
.page-section-gap{
  box-sizing: border-box;
  padding: 0 30rpx;
}
.page-section-spacing{
  box-sizing: border-box;
}
